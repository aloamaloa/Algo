<resources>

    <style name="CodeViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/CodeViewerActionBarStyle</item>
    </style>

    <style name="CodeViewerActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="subtitleTextStyle">@style/CodeViewerSubtitleStyle</item>
    </style>

    <style name="CodeViewerSubtitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">8sp</item>
    </style>

</resources>
